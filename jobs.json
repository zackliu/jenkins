{
    "partner": "docs",
    "workflow":[
        {
            "branch": "develop",
            "jobs":[
                {
                    "template": "nodeDefault",
                    "name": "develop_ci",

                    "shellEnabled": true,
                    "shell":[
                        "npm install",
                        "npm run opst init"
                    ],

                    "publishersEnabled":true,
                    "publishers":{
                        "extendedEmailEnabled": true,
                        "extendedEmail":{
                            "triggersAlwaysEnabled": true
                        }
                    }
                },

                {
                    "template": "nodeDefault",
                    "name": "develop_opbuild",

                    "triggerEnabled": true,
                    "triggers":{
                        "upstream": "develop_ci"
                    },

                    "shellEnabled": true,
                    "shell":[
                        "npm install \n"
                        
                    ],

                    "publishersEnabled":true,
                    "publishers":{
                        "extendedEmailEnabled": true,
                        "extendedEmail":{
                            "triggersFailureEnabled": true,
                            "triggersFixedEnabled": true
                        }
                    }
                },

                {
                    "name": "develop_e2e",
                    "template": "e2eDefault",

                    "triggerEnabled": true,
                    "triggers":{
                        "upstream": "develop_opbuild"
                    },

                    "shellEnabled": true,
                    "shell":[
                        "npm install \n"
                    ],

                    "publishersEnabled":true,
                    "publishers":{
                        "artifactArchiverEnabled": true,
                        "extendedEmailEnabled": true,
                        "extendedEmail":{
                            "triggersFailureEnabled": true,
                            "triggersFixedEnabled": true
                        }
                    }
                },

                {
                    "name": "develop_merge",
                    "template": "nodeDefault",

                    "triggerEnabled": true,
                    "triggers":{
                        "upstream": "develop_e2e"
                    },

                    "git":{
                        "name": "Template.Docs",

                        "mergeOptionsEnabled": true,
                        "mergeOptions":{
                            "branch": "release",
                            "remote": "Template.Docs"
                        }
                    },

                    "publishers":{
                        "gitEnabled": true
                    }
                }
            ]
        },

        {
            "branch": "release",
            "jobs":[
                {
                    "template": "nodeDefault",
